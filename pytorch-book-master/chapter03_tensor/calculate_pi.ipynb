   "source": [
    "# 用 Monte Carlo 计算圆周率 $\\pi$"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 1,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "pi = 3.141392707824707\n"
     ]
    }
   ],
   "source": [
    "import torch\n",
    "num_sample = 10000000\n",
    "sample = torch.rand(num_sample, 2)\n",
    "dist = sample.norm(p=2, dim=1)\n",
    "ratio = (dist < 1).float().mean()\n",
    "pi = ratio * 4\n",
    "print('pi = {}'.format(pi))"
   ]
  }
 ],
